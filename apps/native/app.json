{
  "expo": {
    "name": "Bonchef",
    "slug": "bonchef-native",
    "version": "1.0.0",
    "owner": "bonchef",
    "orientation": "portrait",
    "icon": "./assets/icons/iphone-light.png",
    "scheme": "bonchefnative",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bonchef-digital-kitchen.bonchef",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/iphone-light.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.bonchefdigitalkitchen.bonchef"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/icons/iphone-light.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#385940"
        }
      ],
      [
        "expo-share-intent",
        {
          "disableIOS": true
        }
      ],
      [
        "expo-share-extension",
        {
          "height": 500,
          "activationRules": [
            {
              "type": "url",
              "max": 1
            }
          ],
          "backgroundColor": {
            "red": 255,
            "green": 255,
            "blue": 255,
            "alpha": 0.0
          },
          "excludedPackages": [
            "expo-dev-client",
            "expo-splash-screen",
            "expo-updates"
          ]
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Montserrat-Regular.ttf",
            "./assets/fonts/Montserrat-Medium.ttf",
            "./assets/fonts/Montserrat-SemiBold.ttf",
            "./assets/fonts/Montserrat-Bold.ttf",
            "./assets/fonts/Lora-Regular.ttf",
            "./assets/fonts/Lora-Medium.ttf",
            "./assets/fonts/Lora-SemiBold.ttf",
            "./assets/fonts/Lora-Bold.ttf"
          ]
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "De app heeft toegang tot je foto's nodig op een nieuwe afbeelding te selecteren voor je recept.",
          "cameraPermission": "De app heeft toegang tot je camera nodig op een nieuwe afbeelding te maken voor je recept.",
          "microphonePermission": "De app heeft toegang tot je microfoon nodig om stemopnames te maken als recept beschrijving."
        }
      ],
      [
        "expo-web-browser",
        {
          "experimentalLauncherActivity": false
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "3132c17e-7a3a-4dc8-aeac-098ee6afda8d"
      }
    }
  }
}
